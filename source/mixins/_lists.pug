mixin course-listing(prerequis, places, lieu, objectif)
	ul.fa-ul
		li
			i.fa.fa-li.fa-lg.fa-check-square-o
			p.
				Pr√©-requis :
			if prerequis
				each value in prerequis
					span= value
					br
			else
				span Aucun
		if places
			li
				i.fa.fa-li.fa-lg.fa-user
				p.
					Nombre de places :
				span= places
		li
			i.fa.fa-li.fa-lg.fa-map-marker
			p.
				Lieu :
			span= lieu
		if objectif
			li
				i.fa.fa-li.fa-lg.fa-trophy
				p.
					Objectif :
				span= objectif

mixin course-learning(values)
	h4 Ce que vous allez apprendre
	ul.fa-ul
		each val in values
			li
				i.fa.fa-li.fa-lg.fa-check-square-o
				p= val

mixin course-for-who(values)
	h4 A qui s'adresse ce cours ?
	ul.fa-ul
		each val in values
			li
				i.fa.fa-li.fa.fa-minus
				p= val
